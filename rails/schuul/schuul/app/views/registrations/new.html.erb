	<%= render "shared/errormsg", obj_starwars: @registration %>


		<div class="row">
		<div class="medium-2 columns">
				<%= f.label :name %>
		</div>
		<div class="medium-10 columns">
				<%= f.text_field :name %>
		</div>
		</div>

		<div class="row">
			<div class="medium-2 columns">
