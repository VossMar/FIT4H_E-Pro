<p id="notice"><%= notice %></p>

<h1>Listing Tasks for: <%= @project.title %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Taskverwalter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= task.vis_name %></td>
        <td><%= link_to 'Task anzeigen', project_task_path(task.project_id,task.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Neuer Task', new_project_task_path, class: "button" %><br>
<%= link_to 'Back', showall_projects_path, class: "button" %>

