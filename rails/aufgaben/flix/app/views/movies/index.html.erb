<div align="center">
	<%= image_tag("cinema-banner.jpg") %>
</div>

<h1>Es <%= ein_mehrzahl %> vorhanden.</h1>
<p><%= link_to "Neuen Film anlegen", new_movie_path %></p>




	<%@movies.each do |movie| %>
<div class="panel">
	<div class="row">
		<div class="medium-9 columns">

			<div class="row">
				<div class="medium-6 columns">
					<%= link_to "movie.title", movie_path(movie.id) %>
				</div>
				<div class="medium-6 columns"></div>
			</div>

			<div class="row">
				<div class="medium-2 columns">
					<%= image_tag("no-img.jpg", alt: "Hier Bild",width: 50, height: 100) %>
				</div>
				<div class="medium-10 columns">

					<div class="row">
						<div class="medium-2 columns">
							Release:
						</div>
						<div class="medium-10 columns">
							<%= time_ago_in_words(movie.release) %>
						</div>
					</div>
					<div class="row">
						<div class="medium-2 columns">
							Rating:
						</div>
						<div class="medium-10 columns">
							<%= movie.rating %>
						</div>
					</div>

				</div>

			</div>

		</div>

		<div class="medium-3 columns">
			<div>
				<%= link_to "Show", movie_path(movie.id) %>
			</div>
			<div>
				<%= link_to "Edit", edit_movie_path(movie.id) %>
			</div>
			<div>
				<%= link_to "Delete", movie_path(movie.id),method: :delete, data: {confirm: "Wirklich?!"} %>
			</div>

		</div>

	</div>
</div>
<p>
	<% end %>


