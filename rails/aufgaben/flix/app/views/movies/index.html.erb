<div align="center">
	<%= image_tag("cinema-banner.jpg") %>
</div>

<%= render "type" %>

<h1>Es <%= ein_mehrzahl %> vorhanden.</h1>
<p><%= link_to "Neuen Film anlegen", new_movie_path, type: "button", class: "button" %></p>


<%@movies.each do |movie| %>
	
	<div class="panel">
		<div class="row">
			<div class="medium-9 columns">

				<div class="row">
					<div class="medium-6 columns">
						<h3><%= link_to movie.titel.titleize, movie_path(movie.id) %></h3>
					</div>
					<div class="medium-6 columns"></div>
				</div>

				<div class="row">
					<div class="medium-2 columns">
						<%= image_for(movie) %>
					</div>
					<div class="medium-10 columns">

						<div class="row">
							<div class="medium-2 columns">
								Release:
							</div>
							<div class="medium-10 columns">
								<%= time_ago_in_words(movie.release) %>
							</div>
						</div>
						<div class="row">
							<div class="medium-2 columns">
								Rating:
							</div>
							<div class="medium-10 columns">
								<%= movie.rating %>
							</div>
						</div>
						<div class="row">
							<div class="medium-2 columns">
								Video-Url:
							</div>
							<div class="medium-10 columns">
								<%= link_to movie.vidurl, movie.vidurl %>
							</div>
						</div>

					</div>
				</div>

			</div>

			<div class="medium-3 columns">
				<ul class="stack button-group">
					<li>Edits</li>
				  <li><%= link_to "Show", movie_path(movie.id), type: "button", class: "button" %></li>
				  <li><%= link_to "Edit", edit_movie_path(movie.id), type: "button", class: "button" %></li>
				  <li><%= link_to "Delete", movie_path(movie.id),method: :delete, data: {confirm: "Wirklich?!"}, type: "button", class: "button" %></li>
				</ul>
			</div>

		</div>
	</div>
<% end %>


