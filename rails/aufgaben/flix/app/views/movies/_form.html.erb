<%= form_for(@movie) do |m| %>

<% if @movie.errors.any? %>
		<div class="panel">
			<ul>
				<% @movie.errors.full_messages.each do |err| %>
					<li><%= err %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
	<%= m.label :titel %><br>
	<%= m.text_field :titel %>
	</p>
	<p>
	<%= m.label :description %><br>
	<%= m.text_area :description %>
	</p>
	<p>
	<%= m.label :duration %><br>
	<%= m.text_field :duration %>
	</p>
	<p>
	<%= m.label :director %><br>
	<%= m.text_field :director %>
	</p>
	<p>
	<%= m.label :cast %><br>
	<%= m.text_field :cast %>
	</p>
	<p>
	<%= m.label :image %><br>
	<%= m.text_field :image %>
	</p>
	<p>
	<%= m.label :vidurl %><br>
	<%= m.text_field :vidurl %>
	</p>
	<p>
	<%= m.label :total_gross %><br>
	<%= m.number_field :total_gross %>
	</p>
	<p>
	<%= m.label :release %><br>
	<%= m.datetime_select :release %>
	</p>
	<p>
	<%= m.label :rating %><br>
	<%= m.text_field :rating %>
	</p>
	<p>
	<%= m.submit %>
	</p>

<% end %>

