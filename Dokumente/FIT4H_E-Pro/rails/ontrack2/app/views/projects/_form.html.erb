<%= form_for @project do |f| %>

	<%= render 'errors' %>

  	<%= f.label :title, "Title" %><br>
  	<%= f.text_field :title %><br><br>

  	<%= f.label :description, "Beschreibung" %><br>
  	<%= f.text_field :description %><br><br>

  	<%= f.label :start_date, "Beginn" %><br>
  	<%= f.date_select :start_date %><br><br>

 <% if request.path == "/projects/new" %>
  	<%= f.submit "Projekt anlegen!" %>
<% else %>
  	<%= f.submit "Projekt aktualisieren!" %>
<% end %>

<% end %>